{
  "name": "anki-template-designer-web",
  "version": "2.0.0",
  "description": "React + Craft.js web UI for Anki Template Designer",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:perf": "vitest run --config vitest.config.ts src/tests/performance.test.ts src/tests/integration-render.test.ts src/tests/bridge-performance.test.ts",
    "test:perf:watch": "vitest watch --config vitest.config.ts src/tests/performance.test.ts",
    "test:perf:bench": "node --expose-gc node_modules/vitest/vitest.mjs run --config vitest.config.ts src/tests/performance.test.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@craftjs/core": "^0.2.12",
    "@craftjs/utils": "^0.2.5",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.0",
    "terser": "^5.46.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
